{
  "extends": "@ethereumjs/config-tsc",
  "compilerOptions": {
    "sourceRoot": "./",
    "outDir": "./dist",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "internal": ["./internal/"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": [
    "./**/*"
  ]
}
